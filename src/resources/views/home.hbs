<script>
    document.addEventListener("DOMContentLoaded", function() {
        const navBtns = document.querySelectorAll('.category-item');
        const popularBtn = document.querySelector('.home-filter__btn-popular'); 
        const newBtn = document.querySelector('.home-filter__btn-new');
        const bestsellBtn = document.querySelector('.home-filter__btn-bestsell');
        const sortForm = document.querySelector('.sortForm');
        //  
        Array.from(navBtns).forEach(function(navBtn) {
            navBtn.onclick = function() {
                Array.from(navBtns).forEach(function(navBtnchild) {
                    navBtnchild.classList.remove('category-item--active');
                })
            navBtn.classList.add('category-item--active')
                }
            })
        // Handle click
        popularBtn.onclick = function() {
            newBtn.classList.remove('btn--primary');
            bestsellBtn.classList.remove('btn--primary');
            popularBtn.classList.add('btn--primary');

        }

        newBtn.onclick = function() {
            newBtn.classList.add('btn--primary');
            bestsellBtn.classList.remove('btn--primary');
            popularBtn.classList.remove('btn--primary');

        }

        bestsellBtn.onclick = function() {
            newBtn.classList.remove('btn--primary');
            bestsellBtn.classList.add('btn--primary');
            popularBtn.classList.remove('btn--primary');

        }
    }
    )
</script>

