<div class="grid">
    <div class="grid__row app__content">
        <div class="grid__column-2">
            <h3>olegion2001</h3>
            <a href=>Sửa hồ sơ</a>
            <div>
                <a href="">Tài khoản của tôi</a>
            </div>
            <div>
                <a href="">Hồ sơ</a>   
            </div>
            <div>
                <a href="">Đổi mật khẩu</a>   
            </div>
            <div>
                <a href="">Đơn mua</a>   
            </div>
            <div>
                <a href="">Thông báo</a>
            </div>
        </div>
        
        <div class="grid__column-10">
            
            {{#with product}}
            <form action="/me/delete/product/{{productCode}}?_method=DELETE" class="deleteProductForm" method="POST">
                <button class="btn btn-primary btn-delete-product">Xóa sản phẩm</button>
            </form>
            <form class="formSell product-save-form" action="/me/edit/{{productCode}}?_method=PATCH" method="POST">
                <div class="form-group">
                    <label for="productName">Mã sản phẩm</label>
                    <input type="text" class="form-control" disabled name="productCode" value="{{productCode}}">
                
                <div class="form-group">
                    <label for="productName">Tên sản phẩm</label>
                    <input type="text" class="form-control" name="productName" value="{{productName}}">
                <div class="col-auto my-1">
                    <label class="mr-sm-2 sr-only" for="inlineFormCustomSelect">Chọn dòng sản phẩm</label>
                    <select class="custom-select mr-sm-2" name="productline">
                        <option value="{{productline}}">{{productline}}</option>
                        <option value="Áo">Áo</option>
                        <option value="Điện Thoại">Điện thoại</option>
                        <option value="Đồng Hồ">Đồng hồ</option>
                        <option value="Giầy, dép">Giầy, dép</option>
                        <option value="Mũ">Mũ</option>
                        <option value="Phụ Kiện">Phụ kiện</option>
                        <option value="Quần">Quần</option>
                        <option value="Túi Xách">Túi xách</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="quantityInStock">Số lượng hiện có</label>
                    <input type="number" class="form-control" name="quantityInStock" value="{{quantityInStock}}">
                </div>
                <div class="form-group">
                    <label for="buyPrice">Giá bán</label>
                    <input type="number" class="form-control" name="buyPrice" value="{{buyPrice}}">
                </div>
                <div class="form-group">
                    <label for="image">Ảnh</label>
                    <input type="text" class="form-control" name="image" value="{{image}}">
                </div>
                <div class="form-group">
                    <label for="origin">Xuất xứ</label>
                    <input type="text" class="form-control" name="origin" value="{{origin}}">
                </div>
                <div class="form-group">
                    <label for="discount">Giảm giá</label>
                    <input type="text" class="form-control" name="discount" value="{{discount}}">
                </div>
                <button type="submit" class="btn btn-primary">Lưu</button>
            </form>
            {{/with}}
        </div>
    </div>
</div>

