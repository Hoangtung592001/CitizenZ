<div class="grid">
    <div class="grid__row app__content">
        <div class="grid__column-2">
            <h3>olegion2001</h3>
            <a href=>Sửa hồ sơ</a>
            <div>
                <a href="">Tài khoản của tôi</a>   
            </div>
            <div>
                <a href="/me/change_password_site">Đổi mật khẩu</a>   
            </div>
            <div>
                <a href="/me/order">Đơn mua</a>   
            </div>
        </div>
        
        <div class="grid__column-10">
            <h3>HỒ SƠ CỦA TÔI</h3>
            <h5>Quản lý thông tin hồ sơ để bảo mật tài khoản</h5>
            {{#with user}}
            <div class="form-group row" style="display: none">
                <label for="staticEmail" class="col-sm-2 col-form-label">Mật khẩu cũ</label>
                <div class="col-sm-10">
                <input type="password" class="form-control" id="old-password-value" value="{{password}}">
                </div>
            </div>
            {{/with}}
            <form action="" id="changePasswordForm" method="POST">
            <div class="form-group row">
                <label for="staticEmail" class="col-sm-2 col-form-label">Mật khẩu cũ</label>
                <div class="col-sm-10">
                <input type="password" class="form-control" id="old-password" value="" name="oldPassword">
                <h3 id="textWarningWrongPassword"></h3>
                </div>
            </div>

            <div class="form-group row">
                <label for="staticEmail" class="col-sm-2 col-form-label">Mật khẩu mới</label>
                <div class="col-sm-10">
                <input type="password" class="form-control" value="" name="newPassword">
                </div>
            </div>

            <div class="form-group row">
                <label for="staticEmail" class="col-sm-2 col-form-label">Xác nhận mật khẩu mới</label>
                <div class="col-sm-10">
                <input type="password" class="form-control" value="" name="newPasswordConfirm">
                </div>
            </div>

            <button type="submit">
                Lưu
            </button>
            </form>
        </div>
        
    </div>
</div>
<script>
    document.addEventListener("DOMContentLoaded", function() {
        const oldPasswordValue = document.getElementById("old-password-value").value;
        const oldPasswordInput = document.querySelector(`input[name="oldPassword"]`);
        const newPasswordInput = document.querySelector(`input[name="newPassword"]`);
        const newPasswordConfirmInput = document.querySelector(`input[name="newPasswordConfirm"]`);
        const textWarning = document.getElementById("textWarningWrongPassword");
        const changePasswrodForm = document.getElementById("changePasswordForm");
        changePasswrodForm.onsubmit = function(e) {
            e.preventDefault();
            if (oldPasswordInput.value !== oldPasswordValue) {
                textWarning.innerText = "Bạn nhập sai mật khẩu!";
            }
            oldPasswordInput.oninput = function() {
                textWarning.innerText = "";
            }
            if (newPasswordInput.value === newPasswordConfirmInput.value) {
                changePasswrodForm.action = `/me/change_password/` + newPasswordInput.value + `?_method=PATCH`;
                changePasswrodForm.submit();
            }
        }
    })
</script>
